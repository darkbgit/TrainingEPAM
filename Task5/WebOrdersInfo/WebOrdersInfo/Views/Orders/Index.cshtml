@model WebOrdersInfo.Models.ViewModels.Orders.OrdersListWithPaginationViewModel

@{
    ViewData["Title"] = "Заказы";
}

<div class="row text-center">
    <h4>Заказы</h4>
</div>


<div class="row">
    <div class="col">
        <div id="ordersContainer">
            @{ await Html.RenderPartialAsync("_OrdersListWithPagination", @Model); }
        </div>
    </div>
    <div class="col-4">
        <div id="filtersContainer">
            @if (!User.Identity.IsAuthenticated)
            {
                <div><a asp-action="Login" asp-controller="Account">Войдите</a> или <a asp-action="Register" asp-controller="Account">зарегистрируйтесь</a> для фильтрации заказов</div>
            }
            @*@{ await Html.RenderPartialAsync("_Filters", @Model.Filters); }*@
        </div>
    </div>
</div>




@section scripts
{
    <script src="~/lib/jquery-ui-1.13.1/jquery-ui.min.js"></script>
    <script src="~/js/filters.js"></script>
    <script src="~/js/pagination.js"></script>
}
